<% layout('layouts/boilerplate') %> 


<section class="container pt-5" id="edit">
    <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow pb-3">
                    <div class="col-md-8 offset-md-2">
                        <h1 class="text-center card-title mb-3 pt-3">Create Campground <hr></h1>
                        <div class="card-body shadow border pt-3 pb-3 mb-4">
                            <form action="/campgrounds" method="POST" class="validated-form" enctype="multipart/form-data" novalidate> 
                                <div class="mb-3">
                                    <label class="form-label" for="title">Name of Campground</label>
                                    <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Campground Name" required>
                                    <div class="invalid-feedback">
                                        Please enter a name
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="location">Location (City, State)</label>
                                    <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Location name" required>
                                    <div class="invalid-feedback">
                                        Please enter a location
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="description">Enter description of the campground</label>
                                    <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="Description" required></textarea>
                                    <div class="invalid-feedback">
                                        Please enter a description
                                    </div>
                                </div>
                                <div class="mb-3">       
                                    <label class="form-label" for="price">Enter the price per night</label>                       
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0.00" required>
                                        <div class="invalid-feedback">
                                            Please enter a price 
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="price">Choose photo/s of the campground</label> 
                                    <div class="input-group">
                                        <input type="file" class="form-control" name="image" id="image" multiple required>
                                        <div class="invalid-feedback">
                                                Please choose an Image
                                        </div>
                                    </div>
                                </div>
                                <div class="container pt-3 ">
                                    <div class="row justify-content-around mr-5">
                                        <div class= "mb-3 col-4 ">
                                            <button class="btn btn-lg btn-primary shadow">Confirm</button>
                                        </div>
                                        <div class=" mb-3 col-4 ">
                                            <a class="btn btn-lg btn-primary shadow" href="/campgrounds/">Cancel</a>
                                       </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>